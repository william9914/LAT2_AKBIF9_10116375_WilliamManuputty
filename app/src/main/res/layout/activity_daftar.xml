<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroolview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainDaftar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/ic_header"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_header_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:text="Register"/>
            <ImageView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>

        <View
            android:id="@+id/toolbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/toolbar"
            android:background="@drawable/shadow" />


        <RelativeLayout
            android:id="@+id/rltv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_shadow"
            android:layout_marginTop="-7dp">

            <EditText
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="20dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="#808284"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textColor="#939597"
                android:textColorHint="#808284"
                android:textSize="15dp" />

            <EditText
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#939597"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#939597"
                android:textColorHint="#808284"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edt1"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#808284"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColor="#939597"
                android:textColorHint="#808284"

                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rltv1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-15dp">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#43b3e6"
                    android:checked="true"
                    android:text="Male"
                    android:textColor="#808284"
                    android:textSize="12dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:buttonTint="#43b3e6"
                    android:checked="false"
                    android:text="Female"

                    android:textColor="#808284"
                    android:textSize="12dp" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rltv2"
            android:layout_marginTop="5dp">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#808284"
                android:entries="@array/nama">


            </Spinner>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="225dp"
                android:backgroundTint="#808284"
                android:entries="@array/Reshus">


            </Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rltv3">

            <EditText
                android:id="@+id/txt1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#808284"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#939597"
                android:textColorHint="#808284"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txt2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="#808284"
                android:hint="Retype Password"
                android:inputType="textPassword"
                android:textColor="#939597"
                android:textColorHint="#808284"
                android:textSize="15dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rltv4"

            android:layout_marginLeft="40dp">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#43b3e6"
                    android:checked="true"
                    android:text="Personal"
                    android:textColor="#808284"

                    android:textSize="12dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:buttonTint="#43b3e6"
                    android:checked="false"
                    android:text="Organitzation"

                    android:textColor="#808284"
                    android:textSize="12dp" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltv6"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rltv5"
            android:layout_marginLeft="20dp">

            <Spinner
                android:id="@+id/spn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#808284"

                android:entries="@array/job">


            </Spinner>

            <EditText
                android:id="@+id/edt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spn"
                android:backgroundTint="#939597"
                android:hint="Home Address"
                android:inputType="textEmailAddress"
                android:textColor="#939597"
                android:textColorHint="#808284"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt2"
                android:backgroundTint="#939597"
                android:drawableRight="@drawable/ic_blood_needed_location"
                android:drawablePadding="5dp"
                android:hint="Default Location"
                android:inputType="textEmailAddress"
                android:textColor="#939597"
                android:textColorHint="#808284"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rltv6"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="#43b3e6"
                android:checked="true"
                android:paddingLeft="20dp"
                android:text="Agree with Term and Conditions"
                android:textColor="#808284"
                android:textSize="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rltv7"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-5dp">

            <Button
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttonripple"
                android:text="REGISTER"
                android:onClick="almostthere"
                android:textColor="#43b3e6"
                android:textSize="14dp" />

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>